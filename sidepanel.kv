<SidePanel>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.494, 0.494, 0.494, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: New
        orientation: 'vertical'
        size_hint: 1, 1

        GridLayout:
            cols: 1
            size_hint: 1, 1
            spacing: 0

            Button:
                background_normal: 'images/icons/kebab.png'
                size_hint: None, None
                size: 50, 50
                on_release: root.toggle_panel()

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 70
                spacing: 5
                canvas.before:
                    Color:
                        rgba: 0.129, 0.129, 0.129, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: 'images/icons/add.png'
                    size_hint: None, None
                    size: 70, 70
                    canvas.before:
                        Color:
                            rgba: 0.929, 0.929, 0.929, 1
                        Ellipse:
                            pos: (self.center_x - self.width * 0.45, self.center_y - self.height * 0.45)
                            size: self.width * 0.9, self.height * 0.9

                Label:
                    text: "New Project"
                    size_hint: None, None
                    text_size: 140, 70
                    halign: 'right'
                    valign: 'middle'
                    width: 140
                    height: 70

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 70
                spacing: 5

                canvas.before:
                    Color:
                        rgba: 0.129, 0.129, 0.129, 1
