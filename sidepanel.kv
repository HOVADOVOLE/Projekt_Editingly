                        Ellipse:
                            pos: (self.center_x - self.width * 0.45, self.center_y - self.height * 0.45)
                            size: self.width * 0.9, self.height * 0.9

                Label:
                    text: "Load Project"
                    size_hint: None, None
                    text_size: 140, 50
                    halign: 'right'
                    valign: 'middle'
                    width: 140
                    height: 70
                    pos_hint: {"top": 1}

            BoxLayout:
